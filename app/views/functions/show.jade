extends ../layouts/app

block content

  h2: strong: a(href="app/functions")= title
  table(class="table table-hover")
      thead
        tr
          th ID
          th Nombre
          th Path
      tbody
          tr
            td #{fnction._id}
            td #{fnction.name}
            td #{fnction.path}

  form(method="post", action="app/functions/update")
    fieldset
      legend Actualizar #{title}
      input(type="hidden", value="#{fnction._id}", name="id")
      div.form-group
        label Nombre
        input(type="text", class="form-control", placeholder="Nombre", name="name", value="#{fnction.name}")
      div.form-group
        label Path
        input(type="text", class="form-control", placeholder="Path", name="path", value="#{fnction.path}")

      button(type="submit", class="btn btn-default") Actualizar