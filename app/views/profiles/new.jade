extends ../layouts/default

block content
  h2: strong: a(href="/profiles")= title

  form(method="post", action="profiles/create")
    fieldset
      legend Crear #{title}
      div.form-group
        label Nombre
        input(type="text", class="form-control", placeholder="Nombre", name="name")
      div.form-group
        label Descripción
        input(type="text", class="form-control", placeholder="Descripción", name="description")

      button(type="submit", class="btn btn-default") Crear
