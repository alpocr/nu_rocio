extends ../layouts/app

block content
  h2: strong: a(href="app/profiles")= title

  form(method="post", action="app/profiles/create")
    fieldset
      legend Crear #{title}
      div.form-group
        label Nombre
        input(type="text", class="form-control", placeholder="Nombre", name="name")
      div.form-group
        label Descripción
        input(type="text", class="form-control", placeholder="Descripción", name="description")

      div.form-group
        label Apps
        br
        - for (var i = 0; i < apps.length; i++ )
          div.checkbox: label
            input(type="checkbox", value="#{apps[i]._id}", name="apps[]") 
            a(href="app/apps/#{apps[i]._id}") #{apps[i].name}

      button(type="submit", class="btn btn-default") Crear
