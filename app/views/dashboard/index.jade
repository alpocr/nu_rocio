extends ../layouts/dashboard

block content

  ol.breadcrumb
    li: a(href="/dashboard") Dashboard

  div.row

    if (profile == "Admin") 
      div.col-lg-3
        div.panel
          div.panel-heading
            a(href="app/users"): h4 Admin
          div.panel-body
            | Administraci√≥n de plataforma

    - for (var i=0; i<apps.length; i++)
      div.col-lg-3
