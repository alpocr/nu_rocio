extends ../layouts/app

block content
  a(href="app/modules/new", class="btn btn-success") Crear #{title}
  hr

  legend Lista de #{title}
  table(class="table table-hover")
    thead
      tr
        th ID
        th Nombre
    tbody
      - for (var i=0; i<modules.length; i++)
          tr
            td 
              a(href="app/modules/#{modules[i]._id}") #{modules[i]._id}
            td #{modules[i].name}


