extends ../layouts/default

block content
  h2: strong: a(href="/modules")= title

  form(method="post", action="modules/create")
    fieldset
      legend Crear #{title}
      div.form-group
        label Nombre
        input(type="text", class="form-control", placeholder="Nombre", name="name")

      button(type="submit", class="btn btn-default") Crear